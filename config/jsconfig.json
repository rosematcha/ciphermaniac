{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "baseUrl": "..",
    "paths": {
      "*": ["public/assets/js/*"]
    }
  },
  "include": [
    "../public/assets/js/**/*.js",
    "../types/**/*.d.ts",
    "../global.d.ts"
  ],
  "exclude": [
    "../node_modules",
    "../backend",
    "../functions",
    "../dev",
    "../config"
  ]
}