{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "public/assets/js",
    "rootDirs": ["src", "shared", "types"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "shared/*": ["shared/*"]
    },
    "allowJs": false,
    "checkJs": false
  },
  "include": ["src/**/*.ts", "shared/**/*.ts", "types/**/*.d.ts", "global.d.ts"],
  "exclude": ["node_modules", "backend", "config", "functions"]
}
