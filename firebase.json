{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/card",
        "destination": "/card.html"
      },
      {
        "source": "/card/*",
        "destination": "/card.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }

}