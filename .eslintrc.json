{
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-restricted-syntax": [
      "error",
      {
        "selector": "PropertyDefinition[kind='field'][key.type='PrivateIdentifier']",
        "message": "Private class fields are disallowed for compatibility with older mobile browsers. Use underscored properties or closures instead."
      }
    ],
    "no-unused-vars": "error",
    "no-undef": "error",
    "prefer-const": "error",
    "no-var": "error",
    "eqeqeq": "error",
    "curly": "error",
    "no-console": "warn",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "indent": ["error", 2],
    "no-trailing-spaces": "error",
    "eol-last": "error",
    "no-implicit-coercion": "error",
    "no-unsafe-optional-chaining": "error",
    "no-unsafe-negation": "error",
    "no-implicit-globals": "error",
    "consistent-return": "error",
    "default-param-last": "error",
    "no-param-reassign": ["error", { "props": true }],
    "prefer-rest-params": "error",
    "dot-notation": "error",
    "no-delete-var": "error",
    "no-prototype-builtins": "error",
    "prefer-object-spread": "error",
    "no-useless-computed-key": "error",
    "no-empty": ["error", { "allowEmptyCatch": false }],
    "prefer-promise-reject-errors": "error",
    "no-async-promise-executor": "error",
    "require-atomic-updates": "error",
    "no-await-in-loop": "warn",
    "no-return-await": "error",
    "require-await": "error"
  }
}
