{
  "name": "ciphermaniac",
  "version": "0.1.0",
  "private": true,
  "description": "Pokemon TCG tournament data visualization tool",
  "main": "public/assets/js/main.js",
  "scripts": {
    "build": "npm run build:frontend",
    "postinstall": "npm run build:frontend",
    "lint": "eslint src/feedback.ts src/incidents.ts src/dev/layoutTests.ts src/tools/metaBinderData.ts dev/tests tests --ext .ts",
    "lint:fix": "eslint src/feedback.ts src/incidents.ts src/dev/layoutTests.ts src/tools/metaBinderData.ts dev/tests tests --ext .ts --fix",
    "typecheck": "npx tsc --noEmit --project tsconfig.frontend.json",
    "jsdoc": "jsdoc -c config/jsdoc.config.js",
    "jsdoc:validate": "eslint public/assets/js --ext .js --rule 'valid-jsdoc: error'",
    "complexity": "plato -r -d complexity-report public/assets/js",
    "dev": "node dev/test-server.js",
    "test": "npm run test:all",
    "test:all": "npm run test:unit && npm run test:external",
    "test:unit": "npm run test:security && npm run test:data && npm run test:client && npm run test:integration && npm run test:edge-cases && npm run test:performance && npm run test:reliability && npm run test:legacy",
    "test:external": "npm run test:api",
    "test:security": "node --test --import tsx tests/security/*.test.ts",
    "test:api": "node --test --import tsx tests/api/*.test.ts",
    "test:data": "node --test --import tsx tests/data/*.test.ts",
    "test:client": "node --test --import tsx tests/client/*.test.ts",
    "test:integration": "node --test --import tsx tests/integration/*.test.ts",
    "test:edge-cases": "node --test --import tsx tests/edge-cases/*.test.ts",
    "test:performance": "node --test --import tsx tests/performance/*.test.ts",
    "test:reliability": "node --test --import tsx tests/reliability/*.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:legacy": "npm run test:routing && npm run test:feedback && npm run test:pricing",
    "test:coverage": "c8 npm run test:all",
    "test:coverage:report": "c8 --reporter=html --reporter=text --reporter=lcov npm run test:all",
    "test:coverage:check": "c8 --check-coverage --lines 80 --functions 80 --branches 75 npm run test:all",
    "coverage:badge": "node scripts/generate-coverage-badge.mjs",
    "coverage:update": "npm run test:coverage:report && npm run coverage:badge",
    "test:feedback": "node --test --import tsx dev/tests/feedback.test.ts",
    "test:pricing": "node --test --import tsx dev/tests/pricing.test.ts",
    "test:incidents": "node --test --import tsx dev/tests/incidents.test.ts",
    "test:layout": "node --test --import tsx dev/tests/layoutSmoke.test.ts",
    "test:meta-binder-data": "node --test --import tsx dev/tests/metaBinderData.test.ts",
    "test:card-types": "node --test --import tsx dev/tests/card-types.test.ts",
    "test:routing": "node --test --import tsx dev/tests/card-routing.test.mjs dev/tests/online-meta.test.ts dev/tests/client-side-filtering.test.mjs",
    "test:archetype-reports": "node --test --import tsx tools/archetype-reports.test.ts",
    "validate": "npm run lint && npm run typecheck",
    "validate:fix": "npm run lint:fix && npm run typecheck",
    "clean": "echo 'No build artifacts to clean'",
    "pre-commit": "npm run validate:fix",
    "prepare": "husky",
    "build:card-types": "node tools/build-card-types.mjs",
    "build:frontend": "tsc --project tsconfig.frontend.json",
    "check:card-types": "node tools/check-card-types.mjs"
  },
  "c8": {
    "include": [
      "src/**/*.ts",
      "src/**/*.js",
      "functions/**/*.ts",
      "functions/**/*.js",
      "public/assets/js/**/*.js"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.test.js",
      "**/*.test.mjs",
      "**/*.spec.ts",
      "dev/**",
      "tests/**",
      "node_modules/**",
      "coverage/**"
    ],
    "reporter": [
      "html",
      "text",
      "lcov"
    ],
    "all": true,
    "check-coverage": false
  },
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "c8": "^10.1.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^48.0.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.0",
    "jsdom": "^23.2.0",
    "lint-staged": "^16.2.7",
    "plato": "^1.7.0",
    "playwright": "^1.57.0",
    "prettier": "^3.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "pokemon",
    "tcg",
    "tournament",
    "data-visualization",
    "frontend"
  ],
  "author": "Ciphermaniac",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.928.0",
    "cheerio": "^1.0.0"
  }
}
